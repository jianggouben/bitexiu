{% extends "SlackissBitBundle:layout:layout.html.twig" %}

{% block title %}查看搭配-{{ entity.name }}{% endblock %}

{% block body -%}
    <h2>查看搭配</h2>

    <table class="table  table-striped table-hover table-condensed">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>名称</th>
                <td>{{ entity.name }}</td>
            </tr>

            <tr>
                <th>价格</th>
                <td>{{ entity.price }}</td>
            </tr>

            <tr>
                <th>是否为热点</th>
                <td>{{ entity.hot?'是':'否' }}</td>
            </tr>

            <tr>
                <th>可用性</th>
                <td>{{ entity.enabled?'可用':'禁用' }}</td>
            </tr>

            <tr>
                <th>状态</th>
                <td>
                    {{ entity.state=='draft'?'草稿': entity.state=='published'?'发布':'确认' }}
                </td>

            </tr>
            <tr>
                <th>图片</th>
                <td>{{ entity.image }}</td>
            </tr>
            <tr>
                <th>描述</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="clearfix">
        <div class="pull-left">
            <a href="{{ path('dash_collocation_edit', { 'id': entity.id }) }}">
                <button class="btn btn-primary">修改</button>
            </a>
            <a href="{{ path('dash_collocation') }}">
                <button class="btn btn-primary">返回</button>
            </a>
        </div>
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    </div>

{% endblock %}
