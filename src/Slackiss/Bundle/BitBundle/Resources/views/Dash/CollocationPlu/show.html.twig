{% extends "SlackissBitBundle:layout:layout.html.twig" %}

{% block title %}查看搭配元素-{{ entity.name }}{% endblock %}

{% block body -%}
    <h2>查看搭配元素</h2>

    <table class="table  table-striped table-hover table-condensed">
        <tbody>
            <tr>
                <th>编号</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>名称</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>URL</th>
                <td>{{ entity.url }}</td>
            </tr>
            <tr>
                <th>价格</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>权重</th>
                <td>{{ entity.sequence }}</td>
            </tr>
            <tr>
                <th>可用性</th>
                <td>
                    {% if entity.enabled %}
                    <span class="label label-success">
                    {% else %}
                        <span class="label label-warning">
                    {% endif %}
                            {{ entity.enabled?'可用':'禁用' }}
                </span>
                </td>
            </tr>
            <tr>
                <th>图片</th>
                <td>
                    {% if entity.image %}

                        <a href="{{vich_uploader_asset(entity,'attach')}}" target="_blank">
                            <img src="{{vich_uploader_asset(entity,'attach')|imagine_filter('thumbnail')}}"/>
                        </a>


                    {% endif %}
                </td>
            </tr>



        </tbody>
    </table>

    <div class="clearfix">
        <div class="pull-left">
            <a href="{{ path('dash_collocationPlu_edit', { 'id': entity.id }) }}">
                <button class="btn btn-primary">修改</button>
            </a>
            <a href="{{ path('dash_collocationPlu') }}">
                <button class="btn btn-primary">返回</button>
            </a>
        </div>
        <div class="pull-right">
            {{ form(delete_form) }}
        </div>
    </div>


{% endblock %}
