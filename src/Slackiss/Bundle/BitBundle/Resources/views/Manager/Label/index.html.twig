{% extends "SlackissBitBundle:layout:layout.html.twig" %}

{% block title %}标签管理{% endblock %}

{% block body -%}


    <table class="table  table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>编号</th>
                <th>名字</th>
                <th>序号</th>
                <th>图片</th>
                <th>可用性</th>
                <th>描述</th>
                <th>备注</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('manager_label_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.sequence }}</td>
                <td>
                    {% if entity.image %}
                        <a href="{{vich_uploader_asset(entity,'attach')}}" target="_blank">
                            <img src="{{vich_uploader_asset(entity,'attach')|imagine_filter('thumbnail')}}"/>
                        </a>
                    {% endif %}
                </td>
                <td>{{ entity.enabled?'可用':'禁用' }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.remark }}</td>

                <td>

                        <a href="{{ path('manager_label_show', { 'id': entity.id }) }}">
                            <button class="btn btn-default">
                            查看
                            </button>
                        </a>

                        <a href="{{ path('manager_label_edit', { 'id': entity.id }) }}">
                            <button class="btn btn-default">
                            修改
                            </button>
                        </a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan=8>
                <div class="clearfix">
                    <div class="pull-right">
                        <a href="{{path('manager_label_new')}}"><button class="btn btn-primary">创建</button></a>
                    </div>
                </div>
            </td>
        </tr>
        </tfoot>
    </table>

    {{ knp_pagination_render(entities) }}
    {% endblock %}
