{% extends "SlackissBitBundle:layout:layout.html.twig" %}

{% block title %}查看标签类型{% endblock %}

{% block body -%}
<h2>查看标签类型</h2>

<table class="table">
  <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>名称</th>
      <td>{{ entity.name }}</td>
    </tr>

    <tr>
        <th>可用性</th>
        <td>
            {% if entity.enabled %}
            <span class="label label-success">
                    {% else %}
                <span class="label label-warning">
                    {% endif %}
                    {{ entity.enabled?'可用':'禁用' }}
                </span>
        </td>
    </tr>
    <tr>
      <th>权重</th>
      <td>{{ entity.sequence }}</td>
    </tr>
  </tbody>
</table>

<div class="clearfix">
  <div class="pull-left">
    <a href="{{ path('manager_labelType_edit', { 'id': entity.id }) }}">
      <button class="btn btn-primary">修改</button>
    </a>
  </div>
  <div class="pull-right">
    {{ form(delete_form) }}
  </div>
</div>
{% endblock %}
