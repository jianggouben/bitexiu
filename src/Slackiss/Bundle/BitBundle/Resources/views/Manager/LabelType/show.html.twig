{% extends "SlackissBitBundle:layout:layout.html.twig" %}

{% block title %}查看标签类型{% endblock %}

{% block body -%}
<h2>查看标签类型</h2>

<table class="table">
  <tbody>
    <tr>
      <th>Id</th>
      <td>{{ entity.id }}</td>
    </tr>
    <tr>
      <th>名称</th>
      <td>{{ entity.name }}</td>
    </tr>
    <tr>
      <th>描述</th>
      <td>{{ entity.description }}</td>
    </tr>
    <tr>
      <th>状态</th>
      <td>{{ entity.enabled?'可用':'禁用' }}</td>
    </tr>
    <tr>
      <th>权重</th>
      <td>{{ entity.sequence }}</td>
    </tr>
  </tbody>
</table>

<div class="clearfix">
  <div class="pull-left">
    <a href="{{ path('manager_labelType_edit', { 'id': entity.id }) }}">
      <button class="btn btn-primary">修改</button>
    </a>
  </div>
  <div class="pull-right">
    {{ form(delete_form) }}
  </div>
</div>
{% endblock %}
